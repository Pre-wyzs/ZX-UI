.zx-form-generator {
  padding: 0 0px 0 10px;
}
.zx-form-generator__item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.zx-form-generator__item-title-left {
  display: flex;
  align-items: center;
}
.zx-form-generator__item-title-left-required {
  font-size: 16px;
  color: #f56c6c;
  margin-right: 5px;
}
.zx-form-generator__item-border {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
}
.zx-form-generator__item-border::after {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: rgba(0, 0, 0, 0.1);
}
.zx-form-generator-info {
  width: 60%;
  height: 100px;
  border-radius: 10px 10px;
  color: #fff;
  padding: 10px 8px;
  font-size: 16px;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 99;
}
.zx-form-generator-info-icon {
  text-align: center;
}
.zx-form-generator-info-text {
  text-align: center;
  margin-top: 10px;
  color: #ff8080;
  font-size: 14px;
}

